<Window x:Class="PLWPF.MotherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        mc:Ignorable="d"
        Title="MotherWindow" Height="300" Width="300">
	<Border Background="PeachPuff">
		<ScrollViewer>
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
			</Grid.RowDefinitions>

			<Button Name="addMother" Content="Create a new Mother account" Margin="10" Grid.Row="0" Click="addMother_Click"/>
			<Button Name="upDateMother" Content="Update your Mother's account" Margin="10" Grid.Row="1" Click="upDateMother_Click"/>
			<Button Name="deleteMother" Content="Delete your Mother's account" Margin="10" Grid.Row="2" Click="deleteMother_Click"/>
			<Button Name="viewMother" Content="View all Mothers" Margin="10" Grid.Row="3" Click="viewMother_Click"/>



		</Grid>
		</ScrollViewer>
	</Border>
</Window>
